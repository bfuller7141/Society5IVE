<form
  name="contact"
  method="POST"
  data-netlify="true"
  netlify-honeypot="bot-field"
  class="contact-form"
>
  <!-- Netlify form metadata -->
  <input type="hidden" name="form-name" value="contact" />
  <input type="hidden" name="subject" id="subject" value="" />

  <!-- Honeypot field -->
  <p class="visually-hidden">
    <label>
      Don’t fill this out if you’re human:
      <input name="bot-field" aria-label="Do not fill in" />
    </label>
  </p>

  <div class="form-row">
    <div class="form-group">
      <label for="firstName" class="title-list">First Name</label>
      <input
        type="text"
        id="firstName"
        name="firstName"
        required
        aria-required="true"
        class="form-input"
      />
    </div>
    <div class="form-group">
      <label for="lastName" class="title-list">Last Name</label>
      <input
        type="text"
        id="lastName"
        name="lastName"
        required
        aria-required="true"
        class="form-input"
      />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group">
      <label for="email" class="title-list">Email Address</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        aria-required="true"
        class="form-input"
      />
    </div>
    <div class="form-group">
      <label for="phone" class="title-list">Phone Number</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        class="form-input"
      />
    </div>
  </div>

  <div class="form-group">
    <label for="projectType" class="title-list">Project Type</label>
    <select
      id="projectType"
      name="projectType"
      required
      aria-required="true"
      class="form-input"
    >
      <option value="">Select a project type</option>
      <option value="residential">Residential Interior Design</option>
      <option value="commercial">Commercial Interior Design</option>
      <option value="consultation">Design Consultation</option>
      <option value="other">Other</option>
    </select>
  </div>

  <div class="form-group">
    <label for="timeline" class="title-list">Project Timeline</label>
    <select
      id="timeline"
      name="timeline"
      class="form-input"
    >
      <option value="">Select your timeline</option>
      <option value="immediate">Ready to start immediately</option>
      <option value="1-3months">1-3 months</option>
      <option value="3-6months">3-6 months</option>
      <option value="6months+">6+ months</option>
      <option value="exploring">Just exploring options</option>
    </select>
  </div>

  <div class="form-group">
    <label for="budget" class="title-list">Budget Range (Optional)</label>
    <select
      id="budget"
      name="budget"
      class="form-input"
    >
      <option value="">Select budget range</option>
      <option value="under-25k">Under $25,000</option>
      <option value="25k-50k">$25,000 - $50,000</option>
      <option value="50k-100k">$50,000 - $100,000</option>
      <option value="100k+">$100,000+</option>
      <option value="consultation-only">Consultation only</option>
    </select>
  </div>

  <div class="form-group">
    <label for="message" class="title-list">Tell Us About Your Project</label>
    <textarea
      id="message"
      name="message"
      rows="6"
      placeholder="Share your vision, challenges, or questions. The more you tell us, the better we can help."
      class="form-input form-textarea"
    ></textarea>
  </div>

  <div class="wrapper-buttons">
    <button type="submit" class="button-primary">
      Send Message
    </button>
  </div>
</form>

<style>
button {
    cursor: pointer;
    border: none;
}
.visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
}
.contact-form {
    width: 100%;
    max-width: 100rem;
    margin-top: 3rem;
    box-sizing: border-box;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
}

.form-input {
    padding: 1rem;
    border: 2px solid var(--gray-200);
    border-radius: var(--radius-md);
    font-family: var(--font-primary);
    font-size: var(--fs-body);
    color: var(--agave-500);
    background: var(--whitesands-100);
    transition: all 0.3s ease;
}

.form-input:hover {
    border-color: var(--plumb-500);
    transition: all 0.3s ease;
}

.form-input:focus {
    outline: none;
    border-color: var(--plumb-500);
    box-shadow: 0 0 0 2px rgba(128, 0, 128, 0.2);
    transition: all 0.3s ease;
}

.form-textarea {
    resize: vertical;
    min-height: 8rem;
}

@media (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
    }
}